{
  "name": "CloudLab",
  "image": "ghcr.io/ipv6tech/cloud-networking-101/cloudlab:main",
  "postCreateCommand": {
    "command": "mkdir -p ~/.ssh && cd ~/.ssh && ssh-keygen -f one-ring -N ''"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        // Terraform + OpenTofu tools
        "hashicorp.terraform",
        "gamunu.opentofu",
        // AWS, Azure, Google Cloud, Oracle Cloud tools
        "amazonwebservices.aws-toolkit-vscode",
        "ms-vscode.vscode-node-azure-pack",
        "googlecloudtools.cloudcode",
        "oracle.oci-vscode-toolkit",
        // diagram support
        "hediet.vscode-drawio",
        // git tools
        "mhutchie.git-graph",
        "tomblind.scm-buttons-vscode",
        // code spell checker
        "streetsidesoftware.code-spell-checker",
        // prettier for code formatting
        "esbenp.prettier-vscode",
        // pdf viewer
        "tomoki1207.pdf",
        // yaml
        "redhat.vscode-yaml",
        // markdown
        "yzhang.markdown-all-in-one",
        "DavidAnson.vscode-markdownlint",
        // Theme Support
        "pkief.material-icon-theme",
        "github.github-vscode-theme",
        "danielgjackson.auto-dark-mode-windows",
        // various extensions
        "mutantdino.resourcemonitor",
        "oderwat.indent-rainbow"
        ]
    }
  }
}